<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:clipToOutline="true"
    android:paddingHorizontal="20dp"
    android:paddingTop="22dp"
    android:paddingBottom="24dp"
    tools:backgroundTint="#ffddff">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:contentDescription="@null"
        android:src="@drawable/img_alert_notice_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/DwTextAppearance.Title.600.18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/body_color_basic_1"
        app:layout_constraintTop_toBottomOf="@+id/ivIcon"
        tools:text="메시지 타이틀" />


    <TextView
        android:id="@+id/tvMessage"
        style="@style/DwTextAppearance.Body.400.15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="메시지 내용 입니다" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        style="@style/DwButton.Material.Normal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/done"
        app:backgroundTint="@color/brand_color_basic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>