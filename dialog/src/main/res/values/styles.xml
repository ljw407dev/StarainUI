    <!--  Body  -->
    <style name="DwTextAppearance.Body.Bold.600.15dp" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/pretendard_600</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="DwTextAppearance.Body.400.18dp" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/pretendard_400</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="DwTextAppearance.Body.400.15dp" parent="TextAppearance.AppCompat.Body1">
